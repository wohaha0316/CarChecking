<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="48dp"
    android:weightSum="1" android:paddingStart="4dp" android:paddingEnd="4dp">

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.07"
        android:gravity="center" android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvBL"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.22"
        android:gravity="center_vertical|start" android:paddingStart="4dp" android:textSize="12sp"
        android:maxLines="1" android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvCarInfo"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.36"
        android:gravity="center_vertical|start" android:paddingStart="4dp" android:textSize="12sp"
        android:maxLines="1" android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvClearance"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.12"
        android:gravity="center" android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvChecked"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.11"
        android:gravity="center" android:textSize="12sp" android:textStyle="bold"/>

    <Button
        android:id="@+id/btnShip"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.12"
        android:text="선적"/>
</LinearLayout>
